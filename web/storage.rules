rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Vehicle images: drivers can only manage their own vehicle images
    match /vehicles/{driverId}/{allPaths=**} {
      // Allow read if user is authenticated and owns the path
      allow read: if request.auth != null && request.auth.uid == driverId;

      // Allow write if user is authenticated, owns the path, and file is valid
      allow write: if request.auth != null
                   && request.auth.uid == driverId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
