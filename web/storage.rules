rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Vehicle files: images and documents
    // Authenticated users can read/write (admin check done in app code)
    match /vehicles/{driverId}/{vehicleId}/{fileName} {
      // Allow read if user is authenticated
      allow read: if request.auth != null;

      // Allow write for vehicle images (max 5MB)
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Vehicle documents subfolder (SOAT, TecnomecÃ¡nica PDFs)
    match /vehicles/{driverId}/{vehicleId}/documents/{fileName} {
      // Allow read if user is authenticated
      allow read: if request.auth != null;

      // Allow write for documents (images or PDF, max 10MB)
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && (request.resource.contentType.matches('image/.*')
                       || request.resource.contentType == 'application/pdf');
    }

    // Expense receipts
    match /expenses/{ownerId}/{vehicleId}/receipts/{fileName} {
      // Allow read if user is authenticated
      allow read: if request.auth != null;

      // Allow write for receipts (images or PDF, max 10MB)
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && (request.resource.contentType.matches('image/.*')
                       || request.resource.contentType == 'application/pdf');
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
