rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Driver data - users can only access their own data
    match /drivers/{driverId} {
      // Allow authenticated users to read/write their own driver document
      allow read, write: if request.auth != null && request.auth.uid == driverId;

      // Driver rides subcollection (supports multiple sources: InDriver, manual, etc.)
      match /driver_rides/{rideId} {
        allow read, write: if request.auth != null && request.auth.uid == driverId;
      }
    }

    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
